<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      h1 {
        text-align: center;
      }
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th,
      td {
        text-align: left;
        padding: 8px;
      }
      th {
        background-color: purple;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      tr:hover {
        background-color: #ddd;
      }
    </style>
  </head>
  <body>
    <h1>Planetary systems list</h1>
    <ul>
      <li><a href="/views/">Home</a></li>
      <li><a href="/views/planets">Planets</a></li>
      <li><a href="/views/satellites">Satellites</a></li>
      <li><a href="/views/galaxies">Galaxies</a></li>
    </ul>
    <table>
      <tr>
        <th>Name</th>
        <th>Star</th>
        <th>Star_type</th>
        <th>Age</th>
        <th>Galaxy_name</th>
      </tr>
      <% planetarySystems.forEach(planetarySystem => { %>
      <tr>
        <td>
          <a href="/views/systems/<%= planetarySystem.id %>"><strong><%= planetarySystem.name %></strong></a>
        </td>
        <td><%= planetarySystem.star %></td>
        <td><%= planetarySystem.star_type %></td>
        <td><%= planetarySystem.age %></td>
        <td><%= planetarySystem.galaxy_name %></td>
      </tr>
      <% }) %>
      <tr></tr>
    </table>
  </body>
</html>
